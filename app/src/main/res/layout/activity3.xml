<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/activity3Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/activity3Surname"
        android:inputType="textPersonName" />

    <Switch
        android:id="@+id/ismajor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity3isMajor" />

    <TextView
        android:id="@+id/ratingtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity3rate" />

    <RatingBar
        android:id="@+id/mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/sendjson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:splitTrack="false"
        android:text="@string/activity3SendJson"
        android:textOff="false"
        android:textOn="true"
        tools:checked="false" />

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activitySend" />

    <EditText
        android:id="@+id/Log"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false" />

</LinearLayout>